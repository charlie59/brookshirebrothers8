<div{{ content_attributes.addClass('store-locator') }}>

  <form id="store-locator" action="/store-locator-results">

    <h1 class="page-title">Find a Store</h1>

    <div class="field">
      <label class="label" for="search">Search by "City, State" or Zip Code</label>
      <div class="control">
        <input id="search" class="input is-small" type="text" name="zipCode">
        <p class="help is-danger is-hidden">Please enter a Zip code, city name, or state</p>
      </div>
    </div>

    <div class="field">
      <label class="label" for="filter-distance">Search Within</label>
      <div class="control">
        <div class="select">
          <select id="filter-distance" name="filterDistance">
            <option value="20">20 miles</option>
            <option value="30">30 miles</option>
            <option value="40">40 miles</option>
            <option value="50">50 miles</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <button class="button" type="submit" id="searchSubmit">Search</button>
        <div id="loading"> </div>
      </div>
    </div>

    <h3 id="moreOptions" class="is-link"><i class="fas fa-angle-double-down"> </i> Advanced Search</h3>

    <div id="moreOptionsSection">

      <!-- Locations --->
      <p>Include these locations:</p>
      {% for location in items.locations %}
        <div class="field">
          <div class="control">
            <label class="checkbox">
              <input type="checkbox" checked="checked" name="{{ location.name}}">
              {{ location.name }}
            </label>
          </div>
        </div>
      {% endfor %}

      <p>Include results with:</p>
      {% for department in items.departments %}
        <div class="field">
          <div class="control">
            <label class="checkbox">
              <input type="checkbox" checked="checked" name="{{ department.name }}">
              {{ department.name }}
            </label>
          </div>
        </div>
      {% endfor %}

    </div>

  </form>

  <div id="storeResults"></div>
</div>
